{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "removeComments": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES2018",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "paths": {
      "*": ["./node_modules/*", "./src/types/*"]
    },
    "useUnknownInCatchVariables": false
  },
  "include": ["./**/*.ts"],
  "exclude": ["./node_modules/**/*"]
}
